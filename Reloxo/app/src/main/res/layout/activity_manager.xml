<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".AlarmActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="491dp"
        android:layout_height="74dp"
        android:background="@color/design_default_color_primary_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALARM"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="28dp" />

    <ImageButton
        android:id="@+id/imgbutton_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha="255"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="323dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="428dp"
        android:layout_height="71dp"
        android:background="@color/design_default_color_primary_dark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="674dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="World Clock"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="41dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stopwatch"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="691dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="691dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="611dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar2">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edt_0"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:alpha="255"
            app:cardBackgroundColor="@color/design_default_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_time_0"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="TIME"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/edt_date_0"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="DATE"
                    android:inputType="date" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:splitTrack="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edt_1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            app:cardBackgroundColor="@color/design_default_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_time_1"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="TIME"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/edt_date_1"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="DATE"
                    android:inputType="date" />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:splitTrack="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edt_2"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            app:cardBackgroundColor="@color/design_default_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_time_2"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="TIME"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/edt_date_2"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="DATE"
                    android:inputType="date" />

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:splitTrack="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edt_3"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            app:cardBackgroundColor="@color/design_default_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_time_3"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="TIME"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/edt_date_3"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="DATE"
                    android:inputType="date" />

                <Switch
                    android:id="@+id/switch4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:splitTrack="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_edt_4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardBackgroundColor="@color/design_default_color_primary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_time_4"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="TIME"
                    android:inputType="time" />

                <EditText
                    android:id="@+id/edt_date_4"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="DATE"
                    android:inputType="date" />

                <Switch
                    android:id="@+id/switch5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:showText="true"
                    android:splitTrack="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>